# https://www.codewars.com/kata/57a0885cbb9944e24c00008e/train/python

# Removes exclamation from a sentence

def remove_exclamation_marks(s):
    new_sentence = ""

    for i in s:
        if i != "!":
            new_sentence += i

    return new_sentence
    
   
